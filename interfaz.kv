<Suma>:
    name: "suma"
    on_enter: root.generar_numero()

    MDBoxLayout:
        orientation: "vertical"
        padding: "20dp"
        spacing: "30dp"

        canvas.before:
            Color:
                rgba: app.colors['bg']
            Rectangle:
                pos: self.pos
                size: self.size

        MDToolbar:
            title: "Ejercio - Suma"
            elevation: 10
            pos_hint: {"top": 1}
            md_bg_color: app.colors['header']
            text_color: app.colors['text']
            specific_text_color: app.colors['text']

        MDBoxLayout:
            orientation: "horizontal"
            spacing: "10dp"
            size_hint_y: None
            height: self.minimum_height
            pos_hint: {"center_x": 0.5}

            MDLabel:
                id: num1
                text: ""
                halign: "center"
                font_style: "H5"
                theme_text_color: "Custom"
                text_color: app.colors['text']

            MDLabel:
                text: "+"
                halign: "center"
                font_style: "H5"
                theme_text_color: "Custom"
                text_color: app.colors['text']

            MDLabel:
                id: num2
                text: ""
                halign: "center"
                font_style: "H5"
                theme_text_color: "Custom"
                text_color: app.colors['text']

        MDTextField:
            id: respuesta
            hint_text: "Escribe tu respuesta"
            input_filter: "float"
            mode: "rectangle"
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5}

        MDRaisedButton:
            text: "Verificar respuesta"
            font_size: "20sp"
            pos_hint: {"center_x": 0.5}
            size_hint: 0.6, None
            height: "48dp"
            text_color: app.colors['text']
            on_release: root.calcular()

        MDLabel:
            id: resultado
            text: ""
            halign: "center"
            theme_text_color: "Custom"
            text_color: 0, 0, 0, 1

        MDRaisedButton:
            text: "Volver al menu principal"
            pos_hint: {"center_x": 0.5}
            size_hint: 0.4, None
            height: "48dp"
            md_bg_color: [1, 0.3, 0.3, 1]
            on_release: root.manager.current = "Ejercicios"

