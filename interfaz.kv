<CurvedButton@MDRaisedButton>:
    radius: [12]
    md_bg_color: app.colors["primary"]
    text_color: app.colors["text"]
    elevation: 3
    font_size: "16sp"
    size_hint: None, None
    size: dp(200), dp(50)

<MenuPrincipal>:
    name: "menu"

    #fondo general-----------------------------------------
    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(20)
        padding: dp(20)
        md_bg_color: app.colors["bg"]

        #Header-----------------------------------------------------------------------
        MDCard:
            size_hint_y: None
            height: dp(60)
            radius: [20, 20, 0, 0]  # Curvas arriba, recto abajo
            md_bg_color: app.colors["card"]
            elevation: 10
            padding: dp(10)
            orientation: "horizontal"

            #texto dentro del header
            MDLabel:
                text: "Sigma - App"
                font_style: "H6"
                theme_text_color: "Custom"
                text_color: app.colors["text"]
                halign: "left"
                valign: "middle"
        
        #Center---------------------------------------------------
        MDBoxLayout:
            orientation: "vertical"
            spacing: dp(20)
            padding: dp(40)
            size_hint_y: None
            height: self.minimum_height
            pos_hint: {"center_x": 0.5}

            MDLabel:
                text: "Bienvenidos a Sigma - App"
                halign: "center"
                font_style: "H4"
                theme_text_color: "Custom"
                text_color: app.colors["text"]
                size_hint_y: None
                height: self.texture_size[1]

        #boton de operaciones Basicas-----
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"
  
            MDCard:
                radius: [20]
                size_hint: None, None
                size: dp(200), dp(50)
                elevation: 4
                md_bg_color: app.colors["primary"]

                MDRaisedButton:
                    text: "Operaciones Básicas"
                    on_release: root.manager.current = "ejercicios"
                    size_hint: 1, 1
                    md_bg_color: (0, 0, 0, 0) #fondo transparente
                    text_color: app.colors["text"]

        #Boton de Ecuaciones--------
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"
            
            MDCard:
                radius: [20]
                size_hint: None, None
                size: dp(200), dp(50)
                elevation: 4
                md_bg_color: app.colors["primary"]

                MDRaisedButton:
                    text: "Ecuaciones"
                    on_release: root.manager.current = "ecuaciones"
                    size_hint: 1, 1
                    md_bg_color: (0, 0, 0, 0) #fondo transparente
                    text_color: app.colors["text"]
        
        #Boton de Desafio--------
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"
            
            MDCard:
                radius: [20]
                size_hint: None, None
                size: dp(200), dp(50)
                elevation: 4
                md_bg_color: app.colors["primary"]

                MDRaisedButton:
                    text: "Desafio Sigma"
                    on_release: root.manager.current = "desafiodificultad"
                    size_hint: 1, 1
                    md_bg_color: (0, 0, 0, 0) #fondo transparente
                    text_color: app.colors["text"]
        
        #Boton de Salida--------
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"
            
            MDCard:
                radius: [20]
                size_hint: None, None
                size: dp(150), dp(50)
                elevation: 4
                md_bg_color: [1, 0, 0, 1] #Color rojo

                MDRaisedButton:
                    text: "Salir"
                    on_release: app.close
                    size_hint: 1, 1
                    md_bg_color: (0, 0, 0, 0) #fondo transparente
                    text_color: app.colors["text"]

        #Bellow----------------------------------------------------------------
        MDCard:
            size_hint_y: None
            height: dp(60)
            radius: [0, 0, 20, 20]  # Curvas arriba, recto abajo
            md_bg_color: app.colors["card"]
            elevation: 1
            padding: dp(10)
            orientation: "horizontal"

            #texto dentro del header
            MDLabel:
                text: "Seleccione la operacion que desee practicar"
                font_style: "H6"
                theme_text_color: "Custom"
                text_color: app.colors["text"]
                halign: "center"
                valign: "middle"
                
