GestorPantalla:
    MenuPrincipal:
    Ejercicios:
    Suma:
    Resta:
    Multiplicacion:
    Division:
    Ecuaciones:
    EcuacionBasica:

<MenuPrincipal>:
    name: "menu"

    MDBoxLayout:
        orientation: "vertical"
        padding: "20dp"
        spacing: "20dp"

        canvas.before:
            Color:
                rgba: app.colors['bg']
            Rectangle:
                pos: self.pos
                size: self.size

        MDToolbar:
            title: "Sigma - Matemáticas"
            elevation: 10
            pos_hint: {"top": 1}
            md_bg_color: app.colors['header']
            text_color: app.colors['text']
            specific_text_color: app.colors['text']
        
        MDLabel:
            text: "¡Bienvenido a SIGMA! Elige una opción para comenzar"
            theme_text_color: "Custom"
            text_color: app.colors['text']
            halign: "center"
            font_style: "H5"

        MDRaisedButton:
            text: "Operaciones Basicas"
            font_size: "20sp"
            pos_hint: {"center_x": 0.5}
            size_hint: 0.6, None
            height: "48dp"
            text_color: app.colors['text']
            on_release: root.manager.current = "Ejercicios"

        MDRaisedButton:
            text: "Ecuaciones"
            font_size: "20sp"
            pos_hint: {"center_x": 0.5}
            size_hint: 0.6, None
            height: "48dp"
            text_color: app.colors['text']
            on_release: root.manager.current = "Ecuaciones"

        MDRaisedButton:
            text: "Salir"
            pos_hint: {"center_x": 0.5}
            size_hint: 0.4, None
            height: "48dp"
            md_bg_color: [1, 0.3, 0.3, 1]
            on_release: app.stop()

